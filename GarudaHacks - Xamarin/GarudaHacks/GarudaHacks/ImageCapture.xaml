<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="GarudaHacks.ImageCapture">
    <ContentPage.Content>
        <Grid>
            <Image
                   x:Name="image"
                   Source=""
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"/>
            <Button
                x:Name="clickImage"
                Text="Click an Image"
                BackgroundColor="MediumAquamarine"
                BorderColor="Black"
                BorderWidth="1.5"
                Clicked="clickImage_Clicked"
                FontSize="Subtitle"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="StartAndExpand"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Button
                x:Name="selectImage"
                Text="Select an Image"
                BackgroundColor="MediumAquamarine"
                BorderColor="Black"
                BorderWidth="1.5"
                Clicked="selectImage_Clicked"
                FontSize="Subtitle"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="StartAndExpand"
                Grid.Row="5"
                Grid.Column="3"
                Grid.ColumnSpan="2"/>
            <Button
                x:Name="sendToCodeSpace"
                Text="Send To VS CodeSpace"
                Clicked="sendToCodeSpace_Clicked"
                BackgroundColor="#7F0DFF00"
                BorderColor="Black"
                BorderWidth="1.5"
                FontSize="Subtitle"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand"
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="3" HeightRequest="-1" Grid.RowSpan="2"/>
            <Label Text="" 
                   Grid.Row="5"
                   Grid.Column="4"/>
            <Picker 
                x:Name="langPicker"  
                Title="Language" 
                TitleColor="Black"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="3">
                <Picker.ItemsSource>
                    <x:Array 
                        Type="{x:Type x:String}">
                        <x:String>CPP</x:String>
                        <x:String>Java</x:String>
                        <x:String>Python</x:String>
                        <x:String>Text (.txt)</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Grid>
    </ContentPage.Content>
</ContentPage>